{
  "name": "anycomp-backend",
  "version": "1.0.0",
  "description": "Backend for Anycomp Fullstack Developer Project",
  "main": "src/app.ts",
"scripts": {
    "start": "ts-node src/app.ts",
    "dev": "nodemon src/app.ts",
    "typeorm": "typeorm-ts-node-commonjs -d src/db/data-source.ts",
    "migration:create": "npm run typeorm migration:create src/db/migrations/%npm_config_name%",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "build": "tsc", 
    "postbuild": "npm run migration:run"
  },
  "keywords": [
    "express",
    "typescript",
    "postgresql",
    "typeorm"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "slugify": "^1.6.6",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
